{
  "name": "chatapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev:sio": "npx tsx watch server/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:sio\"",
    "build": "next build",
    "build:sio": "tsc --project tsconfig.server.json",
    "build:all": "concurrently \"npm run build\" \"npm run build:sio\"",
    "prebuild": "rm -rf .next",
    "prebuild:sio": "rm -rf dist",
    "start": "next start",
    "start:sio": "NODE_ENV=production node dist/server/index.js",
    "start:all": "concurrently \"npm run start\" \"npm run start:sio\"",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:check": "drizzle-kit check",
    "db:up": "drizzle-kit up",
    "db:seed": "npx tsx drizzle/seed.ts",
    "test:client": "jest --config jest.config.ts",
    "test:server": "jest --config jest.server.config.ts",
    "test:all": "npm run test:client && npm run test:server",
    "test:client:watch": "jest --config jest.config.ts --watch",
    "test:server:watch": "jest --config jest.server.config.ts --watch",
    "test:client:coverage": "jest --config jest.config.ts --coverage",
    "test:server:coverage": "jest --config jest.server.config.ts --coverage"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.14",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.3",
    "lucide-react": "^0.475.0",
    "next": "15.1.7",
    "pg": "^8.13.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/pg": "^8.11.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5"
  }
}
